<body class="home-bg">
<div class = "post-container">
    <% provide(:title, @post.title) %>
    <div class = "post-title">
        <h3><%= @post.title %></h3>
    </div>
    <div class = "post-status-bar">
        <div class = "post-topic"><%= @post.topic %></div>
        <div class = "post-comment-view">
            <div class="card-info-comment"><%= @post.comment %></div>
            <div class="card-info-view"><%= @post.view %></div>
        </div>
    <div class = "clear"></div>
    </div>
    <div class = "post-info-bar">
        <div class = "info-bar-photo">
            <% if @user %>
                <%= link_to @user do %>
                    <%= gravatar_for @user %>
                <% end %>
            <% else %>
                <%= gravatar_for @user %>
            <% end %>
        </div>
        <% if @user %>
            <%= link_to @user do %>
                <p class="info-bar-name"><%= name_for @user %></p>
            <%end%>
        <% else %>
            <p class="info-bar-name-deleted"><%= name_for @user %></p>
        <% end %>
        <p class="info-bar-time"><%= @post.created_at.in_time_zone("Melbourne").strftime("%Y-%m-%d %T") %></p>
        <div class = "clear"></div>
    </div>
    <section class="post-text">
        <%= simple_format(@post.text) %>
    </section>
    <%= render 'comments/new' %>
</div>
<%= render 'layouts/right_side_bar' %>
</body>
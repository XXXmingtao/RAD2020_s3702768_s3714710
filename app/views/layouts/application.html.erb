<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all',
                                              'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/4b7c93aa23.js" crossorigin="anonymous"></script>
  </head>
  <% if request.env['PATH_INFO']=="/newpost" %>
    <body>
  <% elsif request.env['PATH_INFO'] =~ /(users)\/\d\/(edit)/ %>
    <body class="home-bg edit-bg">
  <% elsif request.env['PATH_INFO'] =~ /(users)\/\d/ %>
    <body class="profile-bg">
  <% else %>
    <body class="home-bg">
  <% end %>
  <!-- <%= debug(params) if Rails.env.development? %> -->
  <%= render 'layouts/header' %>
    <div class="container">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      <%= yield %>
    </div>
  <%= render 'layouts/footer' %>
  </body>
</html>
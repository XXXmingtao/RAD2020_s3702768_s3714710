<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "News+", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav">
        <li><%= link_to "Home", root_path, class:"navbar-button"%></li>

        <li class="dropdown">
            <a href="#" class="dropdown-toggle navbar-button" data-toggle="dropdown">
              News <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to"Not Avaliable", "" %></li>
            </ul>
        </li>

        <% if logged_in? %>
          <li class="navbar-right">
            <%= link_to"Log out", logout_path,method: :delete, class:"navbar-button" %>
          </li>
          <li class="dropdown navbar-right">
            <a href="#" class="dropdown-toggle navbar-button" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to"Profile", current_user %></li>
              <li><%= link_to"Settings", edit_user_path(current_user) %></li>
            </ul>
          </li>
        <% else %>
          <li class="navbar-right"><%= link_to "Sign up", signup_path, class:"navbar-button" %></li>
          <li class="navbar-right"><%= link_to "Log in", login_path, class:"navbar-button" %></li>
        <% end %>
          

      </ul>
    </nav>
  </div>

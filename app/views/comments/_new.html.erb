<%= render 'shared/post_error_messages' %>
        <%= form_for(@comment,url: "#{request.original_url}/comment") do |f| %>
            <div class="comment-title">
                <h3>Comment</h3>
            </div>
            <%= f.text_area :content, cols: 20, rows: 10, placeholder: "Leave your comment here" %>
            
            <%= f.submit"Post", class: "comment-submit" %>
        <% end %>